<?xml version="1.0" encoding="utf-8"?>
<widget id="mendix.searchablereferenceselectormxnine.SearchableReferenceSelectorMxNine" pluginWidget="true" needsEntityContext="true" offlineCapable="true" supportedPlatform="Web" xmlns="http://www.mendix.com/widget/1.0/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd">
    <name>Searchable Reference Selector Mx9</name>
    <description>Mendix reference selector with a search bar and a clear button (Mendix 9)</description>
    <helpUrl>https://github.com/bsgriggs/mendix9-searchable-reference-selector/blob/master/README.md</helpUrl>
    <icon />
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="General">
                <systemProperty key="Label" />
                <property key="placeholder" type="textTemplate">
                    <caption>Placeholder</caption>
                    <description></description>
                    <translations>
                        <translation lang="en_US">Search ...</translation>
                    </translations>
                </property>
                <systemProperty key="Editability"></systemProperty>
                <systemProperty key="Visibility"></systemProperty>
            </propertyGroup>
            <propertyGroup caption="Customization">
                <property key="isSearchable" type="boolean" defaultValue="true">
                    <caption>Searchable?</caption>
                    <description>When true, the user will be able to search with a textbox</description>
                </property>
                <property key="isClearable" type="boolean" defaultValue="true">
                    <caption>Clearable?</caption>
                    <description>When true, the search textbox will have either an 'X' icon or the Clear Icon</description>
                </property>
                <property key="showSelectAll" type="boolean" defaultValue="true">
                    <caption>Show Select All?</caption>
                    <description>(Reference Set ONLY) When true, the search textbox will have either a checkbox icon to select all values or the Select All Icon</description>
                </property>
                <property key="maxItems" type="expression" defaultValue="50">
                    <caption>Max Items</caption>
                    <description>Limits the items shown. If 0, no limit is set.</description>
                    <returnType type="Integer" />
                </property>
                <property key="moreResultsText" type="textTemplate">
                    <caption>More Results Text</caption>
                    <description>Text shown if the there are more items than the max items being displayed.</description>
                    <translations>
                        <translation lang="en_US">Search for more results</translation>
                    </translations>
                </property>
                <property key="filterDelay" type="integer" defaultValue="300" required="true">
                    <caption>Filter Delay</caption>
                    <description>How many milliseconds after the user has stopped typing to apply the filter.</description>
                </property>
            </propertyGroup>
        </propertyGroup>
        <propertyGroup caption="Style">
            <property key="selectStyle" type="enumeration" defaultValue="dropdown">
                <caption>Select Style</caption>
                <description></description>
                <enumerationValues>
                    <enumerationValue key="dropdown">Dropdown</enumerationValue>
                    <enumerationValue key="list">List on Page</enumerationValue>
                </enumerationValues>
            </property>
            <property key="optionTextType" type="enumeration" defaultValue="text">
                <caption>Option Text Type</caption>
                <description></description>
                <enumerationValues>
                    <enumerationValue key="text">Text</enumerationValue>
                    <enumerationValue key="html">HTML</enumerationValue>
                    <enumerationValue key="custom">Custom</enumerationValue>
                </enumerationValues>
            </property>
            <property key="optionsStyle" type="enumeration" defaultValue="cell">
                <caption>Option Style</caption>
                <description></description>
                <enumerationValues>
                    <enumerationValue key="cell">Cell</enumerationValue>
                    <enumerationValue key="checkbox">Checkbox</enumerationValue>
                    <enumerationValue key="radio">Radio Buttons</enumerationValue>
                </enumerationValues>
            </property>
            <property key="optionCustomContent" type="widgets" required="false" dataSource="selectableObjects">
                <caption>Option Custom Content</caption>
                <description>Used when the Option Text Type is set to Custom</description>
            </property>
            <property key="referenceSetStyle" type="enumeration" defaultValue="badges">
                <caption>Reference Set Style</caption>
                <description>(Reference Set ONLY) How the selected items are displayed</description>
                <enumerationValues>
                    <enumerationValue key="badges">Badges</enumerationValue>
                    <enumerationValue key="commas">Comma Seperated</enumerationValue>
                </enumerationValues>
            </property>
            <property key="maxReferenceDisplay" type="integer" defaultValue="0">
                <caption>Max Reference Display</caption>
                <description>(Reference Set ONLY) How many many badges / items are displayed (0 = no limit)</description>
            </property>
            <property key="maxMenuHeight" type="expression" defaultValue="'15em'">
                <caption>Max Menu Height</caption>
                <description>CSS Height (i.e. 200px, 20em ... ) for the select menu (default = 15em)</description>
                <returnType type="String" />
            </property>
            <property key="noResultsText" type="textTemplate" >
                <caption>No Results Text</caption>
                <description>Message shown if no results were found</description>
                <translations>
                    <translation lang="en_US">No results found</translation>
                </translations>
            </property>
            <property key="clearIcon" type="icon" required="false">
                <caption>Clear Icon</caption>
                <description></description>
            </property>
            <property key="dropdownIcon" type="icon" required="false">
                <caption>Dropdown Icon</caption>
                <description></description>
            </property>
            <property key="selectAllIcon" type="icon" required="false">
                <caption>Select All Icon Icon</caption>
                <description>(Reference Set ONLY)</description>
            </property>
        </propertyGroup>
        <propertyGroup caption="Data Source">
            <propertyGroup caption="General">
                <property key="selectableObjects" type="datasource" isList="true" required="true">
                    <caption>Selectable Objects</caption>
                    <description>The objects that will be displayed</description>
                </property>
                <property key="association" type="association" selectableObjects="selectableObjects" required="true">
                    <caption>Reference</caption>
                    <description>The association to be set when the user clicks an option</description>
                    <associationTypes>
                        <associationType name="Reference" />
                        <associationType name="ReferenceSet" />
                    </associationTypes>
                </property>
                <property key="displayAttribute" type="attribute" required="true" dataSource="selectableObjects">
                    <caption>Attribute to Display</caption>
                    <description>The attribute that will be displayed for each selectable object</description>
                    <attributeTypes>
                        <attributeType name="String" />
                        <attributeType name="Enum" />
                        <attributeType name="Integer" />
                        <attributeType name="Decimal" />
                        <attributeType name="Long" />
                    </attributeTypes>
                </property>
                <property key="selectableAttribute" type="attribute" required="false" dataSource="selectableObjects">
                    <caption>Selectable Attribute</caption>
                    <description>The attribute on the datasource that determines if that object can be selected</description>
                    <attributeTypes>
                        <attributeType name="Boolean" />
                    </attributeTypes>
                </property>
            </propertyGroup>
            <propertyGroup caption="Actions">
                <property key="onChangeAssociation" type="action">
                    <caption>On Change</caption>
                    <description></description>
                </property>
                <property key="onBadgeClick" type="action" dataSource="selectableObjects">
                    <caption>On Badge Click</caption>
                    <description>(Reference Set ONLY) Action performed when the user clicks on a reference set badge</description>
                </property>
            </propertyGroup>
        </propertyGroup>
    </properties>
</widget>